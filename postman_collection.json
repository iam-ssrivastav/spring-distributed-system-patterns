    "item": [
        {
            "name": "Saga Orchestration",
            "item": [
                {
                    "name": "Create Order (Success)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"customerId\": \"user123\",\n    \"productId\": \"prod-001\",\n    \"quantity\": 2,\n    \"price\": 500\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8082/api/saga/orders",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8082",
                            "path": [
                                "api",
                                "saga",
                                "orders"
                            ]
                        },
                        "description": "Initiates a successful purchase saga. Expects 200 OK and status 'COMPLETED'."
                    },
                    "response": []
                },
                {
                    "name": "Create Order (Out of Stock Failure)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"customerId\": \"user123\",\n    \"productId\": \"OUT_OF_STOCK\",\n    \"quantity\": 1,\n    \"price\": 100\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8082/api/saga/orders",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8082",
                            "path": [
                                "api",
                                "saga",
                                "orders"
                            ]
                        },
                        "description": "Trigger a failure in the Inventory step. Expects 200 OK but status 'CANCELLED' with failure reason."
                    },
                    "response": []
                },
                {
                    "name": "Create Order (Payment Rejected Failure)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"customerId\": \"user123\",\n    \"productId\": \"prod-001\",\n    \"quantity\": 1,\n    \"price\": 1500\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8082/api/saga/orders",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8082",
                            "path": [
                                "api",
                                "saga",
                                "orders"
                            ]
                        },
                        "description": "Trigger a failure in the Payment step (amount > 1000). Expects Compensation (Refund, Release Inventory) and status 'CANCELLED'."
